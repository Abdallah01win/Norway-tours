<body>
    <!-- --- Header Section --- -->
    <header class="header">
        <%- include('navigation') %> 
        <div class="text-box">
            <h1 class="heading-primary">
                <span class="HP-main">outdoors</span>
                <span class="HP-secondary">is where life happens</span>
            </h1>
            <a href="#">Discove our tours</a>
        </div>
    </header>

    <!-- --- Section A --- -->
    <section id="section-a">
        <h2 class="sec-heading">Exciting Tours For Advanturous People</h2>
        <div id="grid-container">
            <div id="text-box">
                <h3>Discover Norway's miracullas nature</h3>
