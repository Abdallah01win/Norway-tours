<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head') %>
</head>

<body>
    <header class="header"
        style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(<%=dataBase[1].imgURL%>)">
        <%- include('navigation') %>
            <div class="text-box">
                <h1>
                    <%=dataBase[1].name %>
                </h1>
            </div>
            <div class="stats">
                <div>
                    <i class="lni lni-users"></i>
                    <p class="number">1500</p>
                    <p class="lable">visitors</p>
                </div>

                <div>
                    <i class="lni lni-map"></i>
                    <p class="number">28000</p>
                    <p class="lable">Miles</p>
                </div>

                <div>
                    <i class="lni lni-star"></i>
                    <p class="number">4.8/5</p>
                    <p class="lable">Reviews</p>

                </div>
            </div>
    </header>
    <section class="section-d">
        <div class="grid-container">
            <% for( let x=0; x < 3; x++ ) { %>
                <div class="review">
                    <div class="profile">
                        <div class="user-img"></div>
                        <div class="user-info">
                            <a href="#" class="user-name">
                                <%= dataBase[1].reviews[x].author %>
                            </a>
                            <a href="#" class="user-tour">
                                <%=dataBase[1].name%>
                            </a>
                        </div>
                        <div class="user-rating">
                            <span>
                                <!-- <i class="lni lni-star"></i> -->
                                <% for( let i=0; i < dataBase[1].reviews[x].stars; i++ ) { %>
                                    <i class="lni lni-star-filled"></i>
                                    <% } %>
                            </span>
                        </div>
                    </div>
                    <div class="review-text">
                        <%=dataBase[1].reviews[x].text%>
                    </div>
                    <div class="review-date">
                        <%=dataBase[1].reviews[x].date%>
                    </div>
                </div>
                <% } %>
        </div>
    </section>

    <section class="section-f">
        <div class="grid-container">
            <div class="img-container">
                <img src="/Assets/form-img.jpg" alt="">
            </div>
            <div class="img-container">
                <img src="/Assets/Hero-img.jpg" alt="">
            </div>
            <div class="img-container">
                <img src="/Assets/Section-A/section-a-2.jpg" alt="">

            </div>
            <div class="img-container">
                <img src="/Assets/Section-A/section-a-3.jpg" alt="">

            </div>
            <div class="img-container">
                <img src="/Assets/Section-A/section-a-1.jpg" alt="">

            </div>
            <div class="img-container">
                <img src="/Assets/Tours/Fjord.jpg"alt="">
            </div>
        </div>
        <div class="cta-box">
            <h3>Book a Tour and make your own magical memories</h3>
            <div class="btns">
                <a href="/views/payment.ejs">Book Now</a>
                <a href="">Contact Us</a >
            </div>
        </div>
    </section>

    <%- include('footer') %>




</body>

</html>