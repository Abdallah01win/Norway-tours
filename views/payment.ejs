<%- include('head') %>

    <body>

        <header class="header"
            style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url(<%=tour.imgURL%>)">
            <%- include('navigation') %>
            <form action="">
                    <h3><%= tour.name %> </h3>
                    <div class="form--input">
                        <label for="Name-on-card">Name On Card</label>
                        <input type="text" name="Name-on-card" required placeholder="Name On Card">
                    </div>

                    <div class="form--input">
                        <label for="credit-card" class="credit-card"><span>Credit Card Number</span>
                            <span>
                                <i class="lni lni-mastercard"></i>
                                <i class="lni lni-visa"></i>
                        </span></label>
                        <input type="number" name="credit-card" required placeholder="XXXX-XXXX-XXXX-XXXX">
                    </div>
                    <div class="small-form">
                        <span class="form--input">
                            <label for="date">Experation Date</label>
                            <input type="text" name="date" required placeholder="MM/YY">
                        </span>
                        <span class="form--input">
                            <label for="CVC/CVV">CVC/CVV</label>
                            <input type="password" name="CVC/CVV" required placeholder="CVC/CVV">
                        </span>
                    </div>
                    <div class="form--check">
                        <input type="checkbox" name="remember" required>
                        <span>I agree to Norway Tour's <span class="terms"> terms and conditions</span></span>
                    </div>
                    <div class="form--buttons">
                        <button >Pay <%= tour.features.price %></button>
                    </div>
                </form>
        </header>

        <%- include('footer') %>
            <script src="/Scripts/app.js"></script>
    </body>